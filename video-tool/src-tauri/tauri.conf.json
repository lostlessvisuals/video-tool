{
    "$schema":  "https://schema.tauri.app/config/2",
    "productName":  "PixelDuel",
    "version":  "0.1.0",
    "identifier":  "video-tool",
    "build":  {
                  "frontendDist":  "../src"
              },
    "app":  {
                "withGlobalTauri":  true,
                "windows":  [
                                {
                                    "title":  "PixelDuel",
                                    "width":  1200,
                                    "height":  820
                                }
                            ],
                "security":  {
                                 "csp":  null,
                                 "assetProtocol":  {
                                                       "enable":  true,
                                                       "scope":  [
                                                                     "**"
                                                                 ]
                                                   }
                             }
            },
    "bundle":  {
                   "active":  true,
                   "targets":  "all",
                   "icon":  [
                                "icons/32x32.png",
                                "icons/128x128.png",
                                "icons/128x128@2x.png",
                                "icons/icon.icns",
                                "icons/icon.ico"
                            ],
                   "resources":  [
                                     "binaries/ffmpeg.exe",
                                     "binaries/ffprobe.exe"
                                 ]
               }
}
